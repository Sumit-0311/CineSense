<% var url = data["Poster"] %>
<% if(url=='N/A'){ %>
    <% url = './images/Notfound.png' %>
<% } %>
<div class = "jumbotron container">
    <div class="row">
        <div class="col-md-4">
            <img src='http://img.omdbapi.com/?i=<%=data["imdbID"]%>&h=800&apikey=5b7a0834' alt="" onerror="this.src='<%=url%>';" class="rounded hoverable img-fluid">
            <% if(currentUser.favfilms.includes(data["imdbID"])){ %>
                <form action='/favs/remove/<%= data["imdbID"]%>' method="POST">
                    <button class="btn btn-info btn-red btn-block my-4" type="submit"><i class="fas fa-times mr-2" aria-hidden="true"></i>REMOVE FROM FAVORITES</button>
                </form>
          <%  } else { %>
            <form action='/favs/add/<%= data["imdbID"]%>' method="POST">
                <button class="btn btn-info btn-amber btn-block my-4" type="submit"><i class="fas fa-star mr-2" aria-hidden="true"></i>ADD TO FAVORITES</button>
            </form>
    <%      } %>
            <form action='/movies/watch/<%= data["Title"]%>' method="GET">
                <button class="btn btn-info btn blue-gradient btn-block my-4" type="submit"><i class="fas fa-film mr-2" aria-hidden="true"></i>WATCH NOW (BETA)</button>
            </form>
            
        </div>
        <div class="col-md-8 contents">
            <h1><%= data["Title"] %> (<%=data["Year"] %>)</h1>
            <ul class="list-group">
                <p><%= data["Plot"] %></p>
                <p><strong>Directed by:</strong> <%= data["Director"] %></p>
                <p><strong>Written by:</strong> <%= data["Writer"] %></p>
                <p><strong>Cast:</strong> <%= data["Actors"] %></p>
                <p><strong>Runtime:</strong> <%= data["Runtime"] %></p>
                <p><strong>Genre:</strong> <%= data["Genre"] %></p>
                <p><strong>Release Date:</strong> <%= data["Released"] %></p>
                <p><strong>Studio:</strong> <%= data["Production"] %></p>
                <p><strong>Box Office:</strong> <%= data["BoxOffice"] %></p>
            </ul>
        </div>
    </div>
</div>

